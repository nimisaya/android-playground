<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="16dp"
        android:text="@string/tint_mode_title"/>

    <androidx.fragment.app.FragmentContainerView
        android:name="com.nimisaya.imageplayground.LearnTintMode"
        android:id="@+id/learntintmode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingTop="32dp"
        android:paddingEnd="16dp"
        android:text="@string/scale_type_title"/>

    <androidx.fragment.app.FragmentContainerView
        android:name="com.nimisaya.imageplayground.LearnScaleType"
        android:id="@+id/learnscaletype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>


